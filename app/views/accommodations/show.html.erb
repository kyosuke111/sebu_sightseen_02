          </div>
        <% end %>
        <% if @target.url.present? %>
          <div class="show_basic_items">
            <div class="show_basic_title">Webサイト</div>
            <div class="show_basic_artcile"><a href="<%= @target.url %>" target="_blank"><%= @target.url %></a><div>
