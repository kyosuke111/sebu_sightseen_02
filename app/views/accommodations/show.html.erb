          <h4><%= @target.roomtype1 %></h4>
          <div class="show_activity_article_area">
            <div class="show_article_activity"><%= @target.roomtype1_description %></div>
            <div class="show_pic_artcile_area"><img src="#"></div>
          </div>

        <% if @target.roomtype2.present? %>
